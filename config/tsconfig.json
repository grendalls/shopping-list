{
  "compilerOptions": {
    "baseUrl": "../",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "pretty": true,
    "module": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES2015", "ES2016", "ES2017"],
    "paths": {
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": ["../src/**/*", "globals.d.ts"]
}
